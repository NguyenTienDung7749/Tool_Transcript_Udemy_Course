<Window x:Class="UdemyTranscriptExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:UdemyTranscriptExtractor.Controls"
        mc:Ignorable="d"
        Title="Udemy Transcript Extractor" 
        Height="800" Width="1280"
        MinHeight="600" MinWidth="960"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Colors.xaml"/>
                <ResourceDictionary Source="/Themes/Buttons.xaml"/>
                <ResourceDictionary Source="/Themes/TextStyles.xaml"/>
                <ResourceDictionary Source="/Themes/Cards.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side - Logo and Title -->
                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0">
                        <!-- Logo -->
                        <Border Width="36" Height="36"
                               CornerRadius="8"
                               Background="{StaticResource AccentGradientBrush}"
                               Margin="0,0,12,0">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z" 
                                          Fill="White"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        
                        <TextBlock Text="Udemy Transcript Extractor"
                                  Style="{StaticResource SubtitleTextStyle}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Right Side - Controls -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0">
                        <!-- Output Folder Button -->
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTip="Select Output Folder"
                               Command="{Binding SelectOutputFolderCommand}"
                               Margin="4,0">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M10,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </Canvas>
                            </Viewbox>
                        </Button>

                        <!-- Settings Button -->
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTip="Settings"
                               Command="{Binding OpenSettingsCommand}"
                               Margin="4,0">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </Canvas>
                            </Viewbox>
                        </Button>

                        <!-- Window Controls -->
                        <Border Width="1" Height="24" 
                               Background="{StaticResource BorderBrush}"
                               Margin="8,0"/>

                        <!-- Minimize -->
                        <Button Style="{StaticResource IconButtonStyle}"
                               Click="MinimizeWindow"
                               Margin="4,0">
                            <Path Data="M20,14H4V10H20" 
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                        </Button>

                        <!-- Maximize/Restore -->
                        <Button x:Name="MaximizeButton"
                               Style="{StaticResource IconButtonStyle}"
                               Click="MaximizeRestoreWindow"
                               Margin="4,0">
                            <Path x:Name="MaximizeIcon"
                                  Data="M4,4H20V20H4V4M6,8V18H18V8H6Z" 
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                        </Button>

                        <!-- Close -->
                        <Button Style="{StaticResource IconButtonStyle}"
                               Click="CloseWindow"
                               Margin="4,0">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border x:Name="Sidebar"
                       Grid.Column="0"
                       Width="280"
                       Background="{StaticResource SecondaryBackgroundBrush}"
                       BorderBrush="{StaticResource BorderBrush}"
                       BorderThickness="0,0,1,0"
                       Padding="16"
                       RenderTransformOrigin="0,0.5">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="SidebarTransform"/>
                    </Border.RenderTransform>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Dashboard Section -->
                            <TextBlock Text="ðŸ“Š Dashboard"
                                      Style="{StaticResource SubtitleTextStyle}"
                                      FontSize="14"
                                      Margin="0,0,0,12"/>

                            <!-- Stats Card -->
                            <Border Style="{StaticResource ModernCardStyle}"
                                   Margin="0,0,0,16"
                                   Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Total Extracted"
                                              Style="{StaticResource CaptionTextStyle}"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding TotalExtracted}"
                                              Style="{StaticResource TitleTextStyle}"
                                              Foreground="{StaticResource AccentBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Recent Files Section -->
                            <TextBlock Text="ðŸ“ Recent Files"
                                      Style="{StaticResource SubtitleTextStyle}"
                                      FontSize="14"
                                      Margin="0,8,0,12"/>

                            <!-- Recent Files List -->
                            <ItemsControl ItemsSource="{Binding RecentFiles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource HoverCardStyle}"
                                               Margin="0,0,0,8"
                                               Padding="12"
                                               Cursor="Hand"
                                               ToolTip="{Binding FilePath}"
                                               MouseLeftButtonUp="RecentFile_Click">
                                            <StackPanel>
                                                <TextBlock Text="{Binding LectureName}"
                                                          Style="{StaticResource BodyTextStyle}"
                                                          FontSize="12"
                                                          TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal"
                                                           Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding FormattedDate}"
                                                              Style="{StaticResource CaptionTextStyle}"
                                                              FontSize="10"/>
                                                    <TextBlock Text=" â€¢ "
                                                              Style="{StaticResource CaptionTextStyle}"
                                                              FontSize="10"/>
                                                    <TextBlock Text="{Binding FormattedSize}"
                                                              Style="{StaticResource CaptionTextStyle}"
                                                              FontSize="10"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Spacer -->
                            <Border Height="20"/>

                            <!-- Branding -->
                            <TextBlock HorizontalAlignment="Center"
                                      Margin="0,20,0,0">
                                <Run Text="Made by " 
                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Run Text="dzung9f" 
                                     Foreground="{StaticResource AccentBrush}"
                                     FontWeight="SemiBold"/>
                                <Run Text=" ðŸš€" 
                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- FAB in Sidebar (Bottom Left) -->
                <controls:FloatingActionButton
                    Grid.Column="0"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="24"
                    Visibility="{Binding TranscriptDetected, Converter={StaticResource BoolToVisConverter}}"
                    Command="{Binding ExtractTranscriptCommand}"
                    IsExtracting="{Binding IsExtracting}"/>

                <!-- WebView2 Container -->
                <Grid Grid.Column="1" Margin="16">
                    <Border Background="{StaticResource SecondaryBackgroundBrush}"
                           CornerRadius="12"
                           BorderBrush="{StaticResource BorderBrush}"
                           BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.3" Color="Black"/>
                        </Border.Effect>

                        <Grid>
                            <!-- WebView2 Placeholder -->
                            <Border x:Name="WebView2Container"
                                   CornerRadius="12"
                                   ClipToBounds="True">
                                <!-- WebView2 will be added here in code-behind -->
                                <Grid>
                                    <TextBlock Text="ðŸŒ WebView2 Browser"
                                              Style="{StaticResource TitleTextStyle}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Grid>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>

            </Grid>

            <!-- Bottom Status Bar -->
            <Border Grid.Row="2"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="0,0,12,12"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,0">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side - Last File Info -->
                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¾"
                                  FontSize="14"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Style="{StaticResource BodyTextStyle}"
                                  FontSize="12"
                                  VerticalAlignment="Center">
                            <Run Text="Last:"/>
                            <Run Text="{Binding LastExtractedFile, Mode=OneWay, TargetNullValue='No files yet'}"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Right Side - Stats -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal">
                        <TextBlock Text="ðŸ“ˆ"
                                  FontSize="14"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Style="{StaticResource BodyTextStyle}"
                                  FontSize="12"
                                  VerticalAlignment="Center">
                            <Run Text="{Binding TotalExtracted, Mode=OneWay}"/>
                            <Run Text="extracted"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>




            <!-- Toast Container -->
            <Canvas x:Name="ToastContainer"
                   Grid.RowSpan="3"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="20"
                   IsHitTestVisible="False"/>

            <!-- Confetti Canvas -->
            <Canvas x:Name="ConfettiCanvas"
                   Grid.RowSpan="3"
                   IsHitTestVisible="False"/>
        </Grid>
    </Border>
</Window>
