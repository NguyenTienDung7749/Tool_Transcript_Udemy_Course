<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Premium Color Palette - Deep Space theme with vibrant accents -->
    <!-- Primary: Deeper, richer backgrounds -->
    <Color x:Key="PrimaryBackgroundColor">#0A0E14</Color>
    <Color x:Key="SecondaryBackgroundColor">#12171E</Color>
    <Color x:Key="TertiaryBackgroundColor">#1A2028</Color>
    <Color x:Key="SurfaceColor">#222831</Color>
    
    <!-- Accent: Warm gradient (Orange to Pink to Purple) - Unique, not typical blue -->
    <Color x:Key="AccentColor">#FF6B35</Color>
    <Color x:Key="AccentPrimaryColor">#FF6B35</Color>
    <Color x:Key="AccentSecondaryColor">#F72585</Color>
    <Color x:Key="AccentTertiaryColor">#7209B7</Color>
    <Color x:Key="AccentPurpleColor">#7209B7</Color>
    <Color x:Key="HoverColor">#FF8555</Color>
    
    <!-- Text with better contrast -->
    <Color x:Key="TextPrimaryColor">#FAFAFA</Color>
    <Color x:Key="TextSecondaryColor">#94A3B8</Color>
    <Color x:Key="TextMutedColor">#64748B</Color>
    
    <!-- Border & Shadow -->
    <Color x:Key="BorderColor">#2A3441</Color>
    <Color x:Key="ShadowColor">#000000</Color>
    
    <!-- Status colors - More vibrant -->
    <Color x:Key="SuccessColor">#10B981</Color>
    <Color x:Key="ErrorColor">#EF4444</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="InfoColor">#3B82F6</Color>
    
    <!-- Premium Gradients -->
    <LinearGradientBrush x:Key="PremiumGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6B35" Offset="0"/>
        <GradientStop Color="#F72585" Offset="0.5"/>
        <GradientStop Color="#7209B7" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GlassGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#20FFFFFF" Offset="0"/>
        <GradientStop Color="#05FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6B35" Offset="0"/>
        <GradientStop Color="#F72585" Offset="0.5"/>
        <GradientStop Color="#7209B7" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#10B981" Offset="0"/>
        <GradientStop Color="#059669" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurpleColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- Glassmorphism Brushes -->
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#2012171E" Opacity="0.8"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#2A3441" Opacity="0.3"/>

</ResourceDictionary>
