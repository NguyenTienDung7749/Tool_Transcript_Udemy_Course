<Window x:Class="UdemyTranscriptExtractor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="400" Width="600"
        MinHeight="300" MinWidth="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Colors.xaml"/>
                <ResourceDictionary Source="/Themes/Buttons.xaml"/>
                <ResourceDictionary Source="/Themes/TextStyles.xaml"/>
                <ResourceDictionary Source="/Themes/Cards.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- TextBox Style -->
            <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                   BorderBrush="{TemplateBinding BorderBrush}"
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   CornerRadius="8">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="âš™ï¸ Settings"
                              Style="{StaticResource SubtitleTextStyle}"
                              VerticalAlignment="Center"
                              Margin="20,0,0,0"/>
                    
                    <!-- Close Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                           Click="CloseWindow"
                           HorizontalAlignment="Right"
                           Margin="0,0,12,0">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                              Width="16" Height="16"
                              Stretch="Uniform"
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Udemy URL Section -->
                    <TextBlock Text="ðŸŒ Udemy Configuration" 
                              Style="{StaticResource SubtitleTextStyle}"
                              Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Udemy Base URL"
                              Style="{StaticResource BodyTextStyle}"
                              Margin="0,0,0,8"/>
                    
                    <TextBox x:Name="UdemyUrlTextBox"
                            Text="{Binding UdemyBaseUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Margin="0,0,0,8"/>
                    
                    <TextBlock Text="For Udemy Business, use your organization's subdomain (e.g., fpl.udemy.com, mycompany.udemy.com)"
                              Style="{StaticResource CaptionTextStyle}"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,24"/>
                    
                    <!-- Output Folder Section -->
                    <TextBlock Text="ðŸ“ File Output" 
                              Style="{StaticResource SubtitleTextStyle}"
                              Margin="0,8,0,16"/>
                    
                    <TextBlock Text="Output Folder"
                              Style="{StaticResource BodyTextStyle}"
                              Margin="0,0,0,8"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="OutputFolderTextBox"
                                Text="{Binding OutputFolder, Mode=OneWay}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                IsReadOnly="True"
                                Grid.Column="0"
                                Margin="0,0,8,0"/>
                        
                        <Button Content="Browse"
                               Style="{StaticResource PrimaryButtonStyle}"
                               Click="BrowseOutputFolder"
                               Grid.Column="1"
                               MinWidth="100"/>
                    </Grid>
                    
                    <TextBlock Text="Transcripts will be saved to this folder"
                              Style="{StaticResource CaptionTextStyle}"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Margin="0,0,0,16"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="0,0,12,12"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,0">
                <Grid>
                    <Button Content="Close"
                           Style="{StaticResource AccentButtonStyle}"
                           Click="CloseWindow"
                           HorizontalAlignment="Right"
                           MinWidth="120"
                           Height="36"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
